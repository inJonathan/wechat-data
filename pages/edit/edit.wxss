.container {
  position: relative;
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
}

.container .edit-item {
  position: relative;
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  border-top: 1px solid #ccc;
}

.container text {
  float: left;
  margin-bottom: 30rpx;
}

.edit-item button {
    margin-top: 20rpx;
    float: right;
    font-size: 14px;
}
